services:
  catalog.api:
    build:
      context: /Users/jargalbat/Projects/ShopDemo
      dockerfile: src/Catalog/Catalog.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Catalog.API
      target: base
    container_name: Catalog.API
    depends_on:
      catalogdb:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      CatalogDatabaseSettings:ConnectionString: mongodb://catalogdb:27018
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: catalog:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/netcoreapp3.1/Catalog.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8000
      target: 80
    tty: true
    volumes:
    - /Users/jargalbat/Projects/ShopDemo/src/Catalog/Catalog.API:/app:rw
    - /Users/jargalbat/vsdbg/vs2017u5:/remote_debugger:rw
    - /Users/jargalbat/.aspnet/https:/root/.aspnet/https:ro
    - /Users/jargalbat/.microsoft/usersecrets:/root/.microsoft/usersecrets:ro
    - /Users/jargalbat/.nuget/packages:/root/.nuget/packages:ro
    - /Users/jargalbat/Projects/ShopDemo:/src:rw
  catalogdb:
    container_name: catalogdb
    image: mongo
    ports:
    - published: 27018
      target: 27018
    restart: always
    volumes:
    - /Users/jargalbat/site:/data/db:rw
version: '3.4'